<h1 class="bg-primary-subtle p-2 text-center text-primary w-100">PRODUCTS</h1>
<section class="d-flex flex-wrap justify-content-evenly">
    {{#each products}}
    <div class="card m-1 border-primary" style="width: 18rem;">
        <img src={{this.image}} class="card-img-top object-fit-cover" alt={{this._id}} style="height: 12rem;">
        <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title text-primary">{{this.title}}</h5>
            <p class="card-text text-secondary">USD{{this.price}}</p>
            <a href="/details/{{this._id}}" class="btn btn-primary">+info</a>
        </div>
    </div>
    {{/each}}
</section>